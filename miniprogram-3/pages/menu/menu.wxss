/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.menu {
  margin-top: 100rpx;
  margin-bottom: 100rpx;
  width: 600rpx;
}

.button {
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  overflow: hidden;
  width: 700rpx;
  height: 220rpx;
  margin: 70rpx;
  color: rgb(0, 0, 0);
  opacity:0.8;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  border-radius: 25rpx; /* 按钮圆角 */
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgb(255, 255, 255);
  opacity: 0.2;

}